@page "/quotes"

<div class="row">
	<h1>Welcome</h1>
	<p>Choose one of the following buttons to add boilerplate text to the document by using the Word JavaScript API.</p>
	<h3>Try it out</h3>
	<div class="col-md-4 p-2">
		<button type="button" class="btn btn-primary" @onclick="InsertWaldo">Add quote from Ralph Waldo Emerson</button>
	</div>
	<div class="col-md-4 p-2">
		<button type="button" class="btn btn-primary" @onclick="InsertBruceSchneier">Add quote from Bruce Schneier</button>
	</div>
	<div class="col-md-4 p-2">
		<button type="button" class="btn btn-primary" @onclick="InsertBallmer">Add quote from Steve Ballmer</button>
	</div>
</div>